@using Microsoft.Web.Helpers
@using OutcoldSolutions.Web.Blog.Core.Util
@{
	Layout = "~/Views/Shared/_Site.cshtml";
}

@RenderBody()

@section Head {
    @{
        var googleAnalyticsId = ConfigurationUtil.GetSettings("GoogleAnalyticsId", string.Empty);
        if (!string.IsNullOrEmpty(googleAnalyticsId))
        {
            @Analytics.GetGoogleAsyncHtml(googleAnalyticsId)
        }
    }
}




