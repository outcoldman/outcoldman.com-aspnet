<?xml version="1.0" encoding="UTF-8"?>
@{
    Layout = null;
}
@model List<SiteMapBlogItem>

@using OutcoldSolutions.Web.Blog.Models
@using System.Globalization

<urlset
      xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.sitemaps.org/schemas/sitemap/0.9
            http://www.sitemaps.org/schemas/sitemap/0.9/sitemap.xsd">
		<url>
	  <loc>http://outcoldman.com/ru/blog/index</loc>
	  <lastmod>@DateTime.Now.ToString("o") </lastmod>
	  <changefreq>daily</changefreq>
	  <priority>0.99</priority>
	</url>
	<url>
	  <loc>http://outcoldman.com/en/blog/index</loc>
	  <lastmod>@DateTime.Now.ToString("o") </lastmod>
	  <changefreq>daily</changefreq>
	  <priority>0.99</priority>
	</url>
	@{
		int i = 0; foreach (SiteMapBlogItem item in Model)
    {
	<url>
	  <loc>http://outcoldman.com/@item.Language/blog/show/@item.BlogId </loc>
	  <lastmod>@DateTime.Now.ToString("o") </lastmod>
	  <changefreq>weekly</changefreq>
	  <priority>@((((Model.Count - (i++)/3.0) * 1.0)/Model.Count).ToString("f", new NumberFormatInfo(){NumberDecimalSeparator = "."}))</priority>
	</url>
	
    }}
	<url>
	  <loc>http://outcoldman.com/ru/site/aboutme</loc>
	  <lastmod>@DateTime.Now.ToString("o") </lastmod>
	  <changefreq>monthly</changefreq>
	  <priority>0.20</priority>
	</url>
	<url>
	  <loc>http://outcoldman.com/en/site/aboutme</loc>
	  <lastmod>@DateTime.Now.ToString("o") </lastmod>
	  <changefreq>monthly</changefreq>
	  <priority>0.20</priority>
	</url>
</urlset>
